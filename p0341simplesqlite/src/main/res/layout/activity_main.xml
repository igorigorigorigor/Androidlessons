<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:paddingTop="15dp">
            <TextView android:text="ID"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <EditText android:id="@+id/edID"
            android:layout_weight="2"/>
            <Button android:id="@+id/btnUpdateID"
                android:text="Update"
                android:textSize="15dp"
                android:layout_width="wrap_content"/>
            <Button android:id="@+id/btnDeleteID"
                android:text="Delete"
                android:textSize="15dp"
                android:layout_width="wrap_content"/>
        </TableRow>
        <TableRow
            android:paddingTop="15dp">
            <TextView android:id="@+id/tvName"
                android:text="Name"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <EditText android:id="@+id/etName"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow android:paddingTop="15dp">
            <TextView android:id="@+id/tvEmail"
                android:layout_weight="1"
                android:text="Email"
                android:textSize="20dp"/>
            <EditText android:id="@+id/etEmail"
                android:layout_weight="5"/>
        </TableRow>
        <TableRow>
            <Button android:id="@+id/btnAdd"
                android:text="Add"
                android:textSize="20dp"
                android:layout_weight="1" />
            <Button android:id="@+id/btnRead"
                android:text="Read"
                android:textSize="20dp"
                android:layout_weight="1" />
            <Button android:id="@+id/btnClear"
                android:text="Clear"
                android:textSize="20dp"
                android:layout_weight="1" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />
</LinearLayout>
